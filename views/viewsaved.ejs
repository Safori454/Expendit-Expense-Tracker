<%- include('partials/header', { title: `Saved list: ${listname}` }) %>

<div class="page-head">
  <div>
    <h1 class="h1"><%= listname %></h1>
    <p class="muted">Saved list preview.</p>
  </div>
  <div class="page-actions">
    <a class="btn btn-ghost" href="/home">Dashboard</a>
    <form action="/newlist" method="POST">
      <button class="btn btn-ghost" type="submit">New list</button>
    </form>
  </div>
</div>

<div class="card">
  <div class="card-body">
    <% if (items && items.length > 0) { %>
      <div class="table-wrap">
        <table class="table">
          <thead>
            <tr>
              <th>Item</th>
              <th class="td-center">Qty</th>
              <th class="td-right">Price</th>
              <th class="td-right">Total</th>
            </tr>
          </thead>
          <tbody>
            <% items.forEach((item) => { %>
              <tr>
                <td><%= item.itemname %></td>
                <td class="td-center"><%= item.quantity %></td>
                <td class="td-right">GH₵ <%= Number(item.price).toFixed(2) %></td>
                <td class="td-right">GH₵ <%= (Number(item.quantity) * Number(item.price)).toFixed(2) %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } else { %>
      <div class="alert">No items saved in this list.</div>
    <% } %>
  </div>
</div>

<%- include('partials/footer') %>
