<%- include('partials/header', { title: 'Edit item' }) %>

<div class="page-head">
  <div>
    <h1 class="h1">Edit item</h1>
    <p class="muted">List: <strong><%= listname %></strong></p>
  </div>
  <div class="page-actions">
    <a class="btn btn-ghost" href="/list?listname=<%= encodeURIComponent(listname) %>">Back to list</a>
  </div>
</div>

<div class="card">
  <div class="card-body">
    <form class="form" action="/edititem/update" method="POST">
      <input type="hidden" name="id" value="<%= item.id %>" />
      <input type="hidden" name="listname" value="<%= listname %>" />

      <div class="field">
        <label class="label" for="itemname">Item name</label>
        <input class="input" id="itemname" type="text" name="itemname" value="<%= item.itemname %>" required />
      </div>

      <div class="form-row">
        <div class="field">
          <label class="label" for="quantity">Quantity</label>
          <input class="input" id="quantity" type="number" name="quantity" value="<%= item.quantity %>" min="0" step="1" required />
        </div>
        <div class="field">
          <label class="label" for="price">Price</label>
          <input class="input" id="price" type="number" step="0.01" name="price" value="<%= item.price %>" min="0" required />
        </div>
      </div>

      <div class="page-actions">
        <button class="btn btn-primary" type="submit">Save changes</button>
        <a class="btn btn-ghost" href="/list?listname=<%= encodeURIComponent(listname) %>">Cancel</a>
      </div>
    </form>
  </div>
</div>

<%- include('partials/footer') %>
