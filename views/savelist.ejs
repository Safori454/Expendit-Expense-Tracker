<%- include('partials/header', { title: 'List saved' }) %>

<div class="page-head">
  <div>
    <h1 class="h1">List saved</h1>
    <p class="muted"><strong>"<%= listname %>"</strong> was saved successfully.</p>
  </div>
  <div class="page-actions">
    <a class="btn btn-ghost" href="/home">Dashboard</a>
  </div>
</div>

<div class="card">
  <div class="card-body">
    <div class="page-actions">
      <form method="POST" action="/setreminder">
        <input type="hidden" name="listname" value="<%= listname %>" />
        <button class="btn btn-primary" type="submit">Set a reminder</button>
      </form>

      <a class="btn" href="/viewsaved?listname=<%= encodeURIComponent(listname) %>">View list</a>

      <form action="/newlist" method="POST">
        <button class="btn btn-ghost" type="submit">Create another list</button>
      </form>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
